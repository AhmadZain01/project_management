<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox">
        <div class="ibox-title">
          <h3 class="m-t-none m-b">Employee</h3>
        </div>
        <div class="ibox-content">
          <div class="row">
            <div class="col-sm-12 b-r">
              <%= form_with(model: [:managers, employee], local: true) do |f| %>
                <% if employee.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>
                    <ul>  
                      <% employee.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
                <div class="row"> 
                  <div class="col-md-4">
                    <div class="form-group">
                      <%= f.label :first_name, "First Name" %>
                      <%= f.text_field :first_name, autofocus: true, required: true, class: "form-control", placeholder: "First Name" %>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <%= f.label :last_name, "Last Name" %>
                      <%= f.text_field :last_name, required: true, class: "form-control", placeholder: "Last Name" %>
                    </div>
                  </div>
                </div>
                <div class="row"> 
                  <div class="col-md-4">
                    <div class="form-group">
                      <%= f.label :country, "Country" %>
                      <%= f.text_field :country, required: true, class: "form-control", placeholder: "Country" %>
                    </div>
                  </div>

                  <div class="col-md-4">
                    <div class="form-group">
                      <%= f.label :city, "City" %>
                      <%= f.text_field :city, required: true, class: "form-control", placeholder: "City" %>
                    </div>
                  </div>
                </div>

                <div class="row"> 
                  <div class="col-md-8">
                    <div class="form-group">
                      <%= f.label :dob, "Date of Birth" %>
                      <%= f.text_field :dob,  class: "form-control", type: "date", autocomplete: "off",  placeholder: "Date of Birth", type: "date" %>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-8">
                    <div class="form-group">
                      <%= f.label :address, "Address" %>
                      <%= f.text_area  :address, as: :text, required: true, class: "form-control", placeholder: "Enter the Address" %>
                    </div>
                  </div>  
                </div>
                <div>
                  <%= f.submit 'Submit', class: "btn btn-success submit" %>
                </div>
              <% end %>
            </div>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
